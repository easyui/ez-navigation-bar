        customLeft1234567890123456789012345678901234567890
      </view> -->
      <image class='right-image' src='../../images/wechat_friend_share.png' mode="aspectFill" slot="right"></image>

    </ez-navigation-bar>
  </block>

  <block wx:if="{{type == 'transparent+noframe'}}">
    <View class='nav-transparent'>
        <ez-navigation-bar title='自定义样式' background='rgba(0,0,0,0)' color='#fff' back="{{true}}" home="{{true}}" iconTheme='white' bindback="handlerGobackClick"></ez-navigation-bar>
    </View>
    <View class='logo'>
        <View class='img'>此处为图片背景</View>
    </View>
  </block>

  <block wx:if="{{type == 'update'}}">
    <ez-navigation-bar back="{{true}}" home="{{true}}" searchBar="{{true}}" title="{{title}}" theme="dark" color="{{color}}"
      background='{{background}}'  bindback="backTap" bindhome="homeTap"  bindsearch="searchTap"></ez-navigation-bar>
    <view class='testBtn' bindtap='updateNavBar' data-type='title'>更新title</view>
  <view class='testBtn' bindtap='updateNavBar' data-type='titleColor'>更新title color</view>
