<view class="container">
  <block wx:if="{{type == 'test'}}">
    <ez-navigation-bar back="{{true}}" home="{{true}}" searchBar="{{true}}" title="" theme="dark" color=''
      background=''  bindback="backTap" bindhome="homeTap"  bindsearch="searchTap"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back'}}">
    <ez-navigation-bar back="{{true}}"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'home'}}">
    <ez-navigation-bar home="{{true}}"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back+home'}}">
    <ez-navigation-bar back="{{true}}" home="{{true}}"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'title'}}" >
    <ez-navigation-bar  title="我是title"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back+title'}}">
    <ez-navigation-bar back="{{true}}" title="我是title"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back+home+title'}}">
    <ez-navigation-bar back="{{true}}" home="{{true}}" title="我是title"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'search'}}" >
    <ez-navigation-bar  searchBar="{{true}}" ></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back+search'}}">
    <ez-navigation-bar back="{{true}}" searchBar="{{true}}"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'back+home+search'}}">
    <ez-navigation-bar back="{{true}}" home="{{true}}" searchBar="{{true}}"></ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'customLeft'}}">
    <ez-navigation-bar>
      <view class='custom' slot="left">
        customLeft1234567890123456789012345678901234567890
      </view>
    </ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'customCenter'}}">
    <ez-navigation-bar>
      <view class='custom' slot="center">
        customLeft1234567890123456789012345678901234567890
      </view>
    </ez-navigation-bar>
  </block>
  <block wx:if="{{type == 'customRight'}}">
    <ez-navigation-bar>
      <!-- <view class='custom' slot="right">
        customLeft1234567890123456789012345678901234567890
      </view> -->
